# =============================================================================
# MAKER-Council Environment Variables - EXAMPLE FILE
# =============================================================================
# Copy this file to .env and configure with your actual values.
# NEVER commit .env file with real API keys to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# LLM Provider Configuration (REQUIRED)
# -----------------------------------------------------------------------------
# MAKER_BASE_URL: URL of your LLM provider API
# IMPORTANT: Must be different from MAKER_API_PORT to avoid infinite loop
# 
# Examples:
#   - OpenAI: https://api.openai.com/v1
#   - OpenRouter: https://openrouter.ai/api/v1
#   - Anthropic: https://api.anthropic.com/v1
#   - Google AI: https://generativelanguage.googleapis.com/v1beta
#   - Local LLM (LM Studio): http://localhost:1234/v1
#   - Local LLM (Ollama via LiteLLM): http://localhost:4000
MAKER_BASE_URL=https://api.openai.com/v1

# MAKER_API_URL: Alternative to MAKER_BASE_URL (takes priority if both are set)
# Use this if you need to override MAKER_BASE_URL
# MAKER_API_URL=https://api.openai.com/v1

# MAKER_API_KEY: API key for authentication with the LLM provider
# REQUIRED - The application will not start without this
# Get your key from your LLM provider dashboard
MAKER_API_KEY=your-api-key-here

# MAKER_API_MODEL: Default model for fallback (used when specific models not set)
# Examples: gpt-4o, gpt-4o-mini, claude-3-5-sonnet-20241022, gemini-2.5-flash
MAKER_API_MODEL=gpt-4o-mini

# -----------------------------------------------------------------------------
# MAKER-Council Models
# -----------------------------------------------------------------------------
# MAKER_JUDGE_MODEL: Model used by the Senior Judge for final decisions
# Should be a capable model for complex reasoning and synthesis
# Recommended: gpt-4o, claude-sonnet-4-20250514, gemini-2.5-pro, gemini-3-pro-preview
MAKER_JUDGE_MODEL=gpt-4o

# MAKER_VOTER_MODEL: Model used by Microagents (Voters) for proposals
# Can be a faster/cheaper model since multiple calls are made
# Recommended: gpt-4o-mini, claude-3-5-haiku-20241022, gemini-2.5-flash, gemini-2.5-flash-lite
MAKER_VOTER_MODEL=gpt-4o-mini

# -----------------------------------------------------------------------------
# Voting Algorithm Settings
# -----------------------------------------------------------------------------
# MAKER_K: Voting margin for first-to-ahead-by-k algorithm
# Higher values = more consensus required, but slower
# Recommended: 3 (balanced), 2 (faster), 5 (more thorough)
# Range: 1-10
MAKER_K=3

# MAKER_MAX_ROUNDS: Maximum voting rounds before forcing a decision
# Prevents infinite loops while allowing convergence
# Recommended: 5-10 for most cases
# Range: 1-20
MAKER_MAX_ROUNDS=10

# MAKER_MAX_TOKENS: Maximum tokens for LLM responses
# Responses exceeding this will be red-flagged and discarded
# Adjust based on your model's context window and needs
MAKER_MAX_TOKENS=16000

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
# MAKER_API_PORT: Port for the OpenAI-compatible API server
# Default: 8338
# Change if this port is already in use
MAKER_API_PORT=8338

# MAKER_MCP_MODE: Force MCP mode (stdin/stdout communication)
# When true, starts as MCP server instead of HTTP server
# Can also be enabled with --mcp command-line flag
# Default: false
# MAKER_MCP_MODE=false

# -----------------------------------------------------------------------------
# Performance Optimization
# -----------------------------------------------------------------------------
# MAKER_FAST_MODE: Enable fast mode for simple prompts
# When true, greetings and short questions are answered directly
# without voting, saving ~55 seconds per simple query
# Recommended: true for production
MAKER_FAST_MODE=true

# MAKER_SIMPLE_PROMPT_MAX_LENGTH: Character limit for "simple" prompts
# Prompts under this length may be handled in fast mode
# Default: 50
MAKER_SIMPLE_PROMPT_MAX_LENGTH=50

# -----------------------------------------------------------------------------
# Response Format
# -----------------------------------------------------------------------------
# MAKER_INCLUDE_REPORT: Include full technical report in response
# When false, returns only the clean final decision
# Recommended: false for production, true for debugging
MAKER_INCLUDE_REPORT=false

# -----------------------------------------------------------------------------
# MCP Client Configuration (Optional - Advanced Feature)
# -----------------------------------------------------------------------------
# Enable MAKER-Council to connect to external MCP servers and use their tools
# This allows the agent to access file systems, databases, APIs, etc.

# MAKER_MCP_CLIENT_ENABLED: Enable MCP client functionality
# Default: false
# MAKER_MCP_CLIENT_ENABLED=false

# MAKER_MCP_SERVERS: MCP servers to connect to
# 
# JSON format (recommended for complex configurations):
# MAKER_MCP_SERVERS='[{"name":"filesystem","command":"npx","args":["-y","@modelcontextprotocol/server-filesystem","/path/to/directory"]}]'
#
# Simple format (semicolon-separated, easier for single server):
# MAKER_MCP_SERVERS='filesystem:npx:-y:@modelcontextprotocol/server-filesystem:/path/to/directory'
#
# Multiple servers example:
# MAKER_MCP_SERVERS='fs:npx:-y:@modelcontextprotocol/server-filesystem:/tmp;brave:npx:-y:@modelcontextprotocol/server-brave-search'
#
# MAKER_MCP_SERVERS=

# MAKER_MCP_TIMEOUT: Default timeout for tool execution in milliseconds
# Increase if your tools need more time to execute
# Default: 30000 (30 seconds)
# MAKER_MCP_TIMEOUT=30000

# MAKER_MCP_MAX_ITERATIONS: Maximum iterations in agent loop
# Prevents infinite loops when using tools
# Default: 10
# MAKER_MCP_MAX_ITERATIONS=10

# MAKER_MCP_AUTO_RECONNECT: Auto-reconnect to MCP servers on disconnect
# Default: false
# MAKER_MCP_AUTO_RECONNECT=false

